<div class="text-center p-4 my-5">
 <%= render "/layouts/search" %>
 <h1>二級ボイラー技士投稿一覧</h1>
 <% BoilPost.all.each_with_index do |boil_post, i| %>
  <p><%= i + 1 %>件目</p>
  <% user = User.find_by(id: boil_post.user_id) %>
   <p>ユーザー名： <%= user.username %></p>
   <p>件名： <%= boil_post.title %></p>
   <p>内容： <%= simple_format(boil_post.content) %></p>
   <%= link_to "詳細", boil_post %>
   <%= link_to "編集", edit_boil_post_path(id: boil_post) %>
   <%= link_to "削除", boil_post_path(id: boil_post), method: :delete, data: { confirm: "削除しますか?" } %>
 <% end %>
</div>
<div class="text-center">
   <%= link_to "記事を投稿する", new_boil_post_path, class: "btn outline btn-primary" %>
</div>